function F = lab_2_3()
    x = -10:0.1:10;
    y = -10:0.1:10;
    [X,Y] = meshgrid(x, y);
    mu = [3 4];
    sigma = [1, 0; 0, 2];
    
%     F = mvnpdf([X(:) Y(:)],mu,sigma);
    F = mvnrnd(mu,sigma,1000);
    F = reshape(F,length(x),length(y));
    mesh(x,y,F)
    
    xlabel("X");
    ylabel("Y");
    zlabel("Z");
    
    point = [10 10];
    
    mahal(point, mvnpdf([X,Y],mu, sigma))
    

end